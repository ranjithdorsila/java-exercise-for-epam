public boolean xyBalance(String str) {
  int k=0,c=0;
  for(int i=str.length()-1;i>=0;i--)
  {
    if(str.charAt(i)=='x'||str.charAt(i)=='y')
    {
      k=1;
    }
  }
    if(k==1)
    for(int i=str.length()-1;i>=0;i--)
  {
    if(str.charAt(i)=='y')
    {
      c=1;
      break;
    }
    if(str.charAt(i)=='x')
    {
      c=0;
      break;
    }
  }
  else
  return true;
  if(c==0)
  return false;
  else
  return true;
}
